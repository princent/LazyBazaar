<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lazybazaar">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/lazybazaarlogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/lazybazaarlogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".UploadImage"
            android:parentActivityName=".Product"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".UserActivity"
            android:parentActivityName=".Product"  />
        <activity android:name=".Product"
            android:label="@string/title_activity_product"
             />
        <activity android:name=".ImageShow"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".Product"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>